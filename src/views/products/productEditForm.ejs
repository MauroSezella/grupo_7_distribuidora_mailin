<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/styles-formProduct.css">
    <title>Editar: <%=product.nombre%></title>

</head>

<body>
    <header>
        <div class="header__container">
            <div class="header__logo">
                <a href="/">
                    <img src="/images/logo-golosinas-mailin.svg" class="header__logo--img" alt="golosinas-mailin" />
                </a>
            </div>

        </div>

    </header>
 

    <main>
        <div class="main__enlaces">
            <a href="/">Inicio </a><span class="span"> > </span><a href="/productos"> Productos</a><span class="span"> > </span><a href="/productos/edit/<%=product.id%>"> Editar</a>
        </div>
        
        <div class="form-contenedor">
            
            <form action="/productos/edit/<%=product.id%>?_method=PUT" method="POST" class="formulario" enctype="multipart/form-data">
                <h2 class="form-titulo">Editar: <%=product.nombre%></h2>
                <div class="form-items form-items-1">
                    <label for="nombreProducto" class="form__label">Nombre del producto</label>
                    <input type="text" name="nombre" id="nombreProducto" class="input-nombre" value="<%=product.nombre%>">
                </div>
                <div class="form-items form-items-1">
                    <label for="descripcionProducto" class="form__label">Descripción</label>
                    <textarea name="descripcion" id="descripcionProducto" cols="30"><%=product.descripcion%></textarea>
                </div>
                <div class="form-items form-items-1 ">
                    <label for="imagenproducto">Seleccionar imagen</label>
                    <div class="imagen"> 
                        <% if (product.img) { %>
                            <img src="/images/products/<%= product.img %>" alt="Imagen actual del producto" class="imagen-actual">
                        <% } %> 
                        <input type="file" name="img" id="imagenproducto" accept=".jpg, .png" class="input-foto">
                    </div>
                </div>
                <div class="form-items form-items-1">
                    <label for="categoriaProducto"> Categoría </label>
                    <select name="categoria" id="categoriaProducto" class="categorias">

                        <!-- agrego -->
                        <% categorias.forEach(element => {%>
                            <% if (element==product.categoria) {%>
                                <option value="<%= element %>" selected ><%= element %></option>  
                            <% } else{%>
                                <option value="<%= element %>" ><%= element %></option>
                            <% }; %>
                         <% }); %>
                    </select>
                </div>
                <div class="form-items">
                    <label for="stockProducto"> Stock </label>
                    <input type="number" name="stock" min="0" id="stockProducto" class="input-stock" placeholder="0" value="<%=product.stock%>">
                </div>
                <div class="form-items">
                    <label for="enOferta"> En oferta </label>
                    <!-- agrego -->
                    <input type="checkbox" name="enOferta" id="enOferta" class="input-oferta" value="<%=product.enOferta%>"<%= product.enOferta === 'si' ? 'checked' : '' %> >
                </div>
                <div class="form-items">
                    <label for="precioProducto"> Precio $ </label>
                    <input type="number" name="precio" step="0.1" id="precioProducto" min="0" class="input-precio" placeholder="0.00" value="<%=product.precio%>">
                </div>
                <div class="form-items">
                    <label for="descuento"> Descuento % </label>
                    <input type="number" name="descuento" min="0" id="descuento" class="input-descuento" value="<%=product.descuento%>" placeholder="0">
                </div>
                <div class="botones-form">
                    <a href="/productos/<%= product.id %>" class="action-button btn-regresar"> Regresar </a>
                    <button type="submit" class="action-button btn-guardar"> Guardar </button>
                </div>
            </form>
        </div>
    </main>
</body>

</html>