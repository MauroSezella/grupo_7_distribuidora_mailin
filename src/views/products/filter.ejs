<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>

        <link rel="stylesheet" href="/css/styles-products.css" />
        <link rel="stylesheet" href="/css/styles-header.css">

        <title>Golosinas Mailin</title>
</head>

<body>


    <%- include('../partials/header') %>


        <section class="main-titulo">



            <% if (enOferta==="si"){%>
                 <h2> Ofertas</h2>
    
            <% }else if(categoriasSeleccionadas.length===0){%>
                    <h2>Todos los Productos</h2>
            <% }else if(categoriasSeleccionadas.length<5 && categoriasSeleccionadas.length>0  ){%>
                        <h2> Productos</h2>

            <% } else{ %>
                    <% categorias.forEach(element=> { %>
                        <% if(categoriasSeleccionadas==element){%>
                                <h2> <%= categoriasSeleccionadas %></h2>
                        <% } %>
                    <% }); %>
            <% } %>

        </section>

        <main class="main__container">
            <section class="main_categorias">
                <details open >
                    <summary class="category-summary">Filtrar<i class="fa-solid fa-caret-down"></i><i
                            class="fa-solid fa-minus"></i></summary>

                    <form action="/productos/filter" method="get" class="form-filter">
                        <div class="label-categoria">
                            <p class="label-filter">Categor√≠a</p>
                            <% categorias.forEach(element=> { %>
                               <li ><label for="<%=element %>"><input type="checkbox" name="categorias" value="<%= element %>" id="<%=element %>">  <%= element %></label></li> 
                
                            <% }); %>
                        </div>
                        <div class="label-ofertas">
                            <p for="" class="label-filter">Ofertas</p>
                            <li><label for="oferta"><input type="checkbox" name="ofertas" value="si" id="oferta"> Si</label></li>
                        </div>

                        <div class="btn-conteiner">
                            <button type="reset" class="limpiar-btn">Limpiar</button>
                            <button type="submit" class="aplicar-btn">Aplicar</button>
                        </div>
                    </form>
                </details>
            </section>


            <section class="main__producto ">
                <%- include('../partials/product.ejs') %>

            </section>


        </main>

        <%- include('../partials/footer') %>

</body>

</html>