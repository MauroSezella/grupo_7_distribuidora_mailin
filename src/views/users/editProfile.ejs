<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>

        <link rel="stylesheet" href="/css/styles-Loginregister.css">
        <title>Edita</title>
        <script src="/js/registerValidation.js"></script>

</head>

<body>
    <header>
        <div class="header__container">
            <div class="header__logo">
                <a href="/">
                    <img src="/images/logo-golosinas-mailin.svg" class="header__logo--img" alt="golosinas-mailin" />
                </a>
            </div>

        </div>
    </header>

    <main>
        <div class="main__enlaces">
            <a href="/">Inicio </a><span class="span"> > </span><a href="/user/profile"> Mi cuenta</a><span class="span"> > </span><a href="#"> Editar</a>
        </div>

        <div class="main-form">

            <form action="/user/profile/edit?_method=PUT" method="post" class="formulario" enctype="multipart/form-data">

                
                <h2 class="title-form">Editar perfil</h2>
                <% if (locals.errors && errors.general) { %>
                    <small class="text-danger error"><%= errors.general.msg %></small>
                <% } %>

               
                <div class="main__form-group">
                    <label for="avatar">Imagen</label>
                    <div class="imagen"> 
                        <img src="/images/users/<%= user.avatar%>" alt="Imagen actual" class="imagen-actual">
                        <input type="file" id="avatar" name="avatar" class="input-register <%= locals.errors && locals.errors.avatar ? 'is-invalid' : null %>">
                    </div>
                    <% if (locals.errors && errors.avatar) { %>
                        <small class="text-danger"><%= errors.avatar.msg %></small>
                    <% } %>
                </div>


                <div class="main__form-group">
                    <label for="nombre">Nombre<span class="span-label">*</span></label>
                    <div class="input-with-icon ">
                        <input type="text" id="nombre" name="nombre" value="<%= locals.oldData ? oldData.nombre : user.nombre %>"  class="<%= locals.errors && locals.errors.nombre ? 'is-invalid' : null %>"/>
                        <% if (locals.errors && locals.errors.nombre) { %>
                            <i class="fa-solid fa-circle-exclamation"></i>
                        <% } %>
                    </div>
                    <% if (locals.errors && locals.errors.nombre) { %>
                        <small class="text-danger"><%= locals.errors.nombre.msg %></small>
                    <% } %>
                </div>

                <div class="main__form-group">
                    <label for="apellido">Apellido<span class="span-label">*</span></label>
                    <div class="input-with-icon">
                        <input type="text" id="apellido" name="apellido" value="<%= locals.oldData ? oldData.apellido : user.apellido %>" class="<%= locals.errors && locals.errors.apellido ? 'is-invalid' : '' %>">
                        <% if (locals.errors && locals.errors.apellido) { %>
                            <i class="fa-solid fa-circle-exclamation"></i>
                        <% } %>
                    </div>
                    <% if (locals.errors && errors.apellido) { %>
                        <small class="text-danger"><%= errors.apellido.msg %></small>
                    <% } %>
                </div>

                <div class="main__form-group">
                    <label for="email">Email<span class="span-label">*</span></label>
                    <div class="input-with-icon">
                        <input type="text" id="email" name="email" value="<%= locals.oldData? oldData.email : user.email %>" class=" <%= locals.errors && locals.errors.email ? 'is-invalid' : '' %>">
                        <% if (locals.errors && locals.errors.email) { %>
                            <i class="fa-solid fa-circle-exclamation"></i>
                        <% } %>
                    </div>
                    <% if (locals.errors && errors.email) { %>
                        <small class="text-danger"><%= errors.email.msg %></small>
                    <% } %>
                </div>

                <div class="main__form-group botones">
                    <a href="/user/profile" class="button-submit btn-regresar">Regresar</a>
                    <button type="submit" class="button-submit btn-guardar">Guardar</button>
                </div>
            </form>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>

</html>