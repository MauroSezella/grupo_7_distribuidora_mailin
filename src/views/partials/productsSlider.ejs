<% products.forEach(product=> { %>
    <article class="sliderProducto--card">
        <a href="/productos/<%=product.id%>" class="sliderProducto--card-img">
            <img src="/images/products/<%=product.img%>" alt="<%=product.nombre%>">
        </a>
        <%if(product.descuento> 0) { %>
            <div class="contenedor-descuento">
                <p class="descuento">
                    <%=product.descuento%>% OFF
                </p>
            </div>
            <% } %>
                <div class="card-descripcion">
                    <p class="sliderProducto--card-categ">
                        <%=product.categoria.toUpperCase()%>
                    </p>
                    <a href="" class="sliderProducto--card-titulo">
                        <%=product.nombre%>
                    </a>
                    <div class="sliderProducto--card-precio">
                        <%if(product.descuento> 0) { %>
                            <p class="precio">$ <%=product.precio%>
                            </p>
                            <p class="precio-final">$ <% let precioFinal=product.precio -
                                    (product.precio * (product.descuento/100)) %>
                                    <%= precioFinal %>
                            </p>
                            <% }else{ %>
                                <p class="precio-final">$ <%=product.precio%>
                                </p>

                                <% }; %>
                    </div>
                    <% if (product.stock > 0) { %>
                    <button class="sliderProducto-button">AÃ±adir al carrito</button>
                    <%}else{%>
                        <button class="sliderProducto-button sin-stock">sin stock</button>
                    <%} %>

                </div>
    </article>
    <% }); %>