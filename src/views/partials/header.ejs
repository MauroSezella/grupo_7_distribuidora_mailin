<header>
    <div class="header__container">
        <div class="header__logo">
            <a href="/"><img src="/images/logo-golosinas-mailin.svg" class="header__logo--img" alt="" /></a>
        </div>

        <nav class="nav-bar">
            <ul class="nav-bar__options">

                <li><a href="/productos" class="nav-bar_enlaces">Productos</a></li>
                <div class="dropdown">
                    <button class="nav-bar_enlaces categoria">Categorias</button>
                    <div class="dropdown-content">
                        <% categorias.forEach(element=> { %>
                            <a href="/productos/filter?categorias=<%= element.id%>" class=" navbar-category">
                                <%= element.nombre %>
                            </a>
                            <% }); %>
                    </div>
                </div>

                <li><a href="/productos/filter?ofertas=si" class="nav-bar_enlaces">Ofertas</a></li>
            </ul>
        </nav>

        <form action="/search" method="get" class="header__search">
            <input type="search" name="keywords" placeholder="Buscar..." class="header__search--input" />
            <button class="header__search--icon"><i class="fa-solid fa-magnifying-glass"></i></button>
        </form>


        <div class="header__icons">
            <% if (locals.isLogged) { %>
                <div class="header__icons--user user-perfil ">
                    <div class="dropdown-perfil">
                        <button class=""> <img src="/images/users/<%= userLogged.avatar %>" class="img-perfil" alt="">
                        </button>
                        <div class="dropdown-content-perfil">
                                <a href="/user/profile">Mi Cuenta</a>
                                <a href="/user/logout/">Cerrar Sesión</a>
                        </div>
                    </div>
                </div>
                <% if (isAdmin) { %>
                    <small class="nombre-user">Admin <%= userLogged.nombre  %></small>
                <% } else { %>
                    <small class="nombre-user"><%= userLogged.nombre  %></small>
                <% } %>
            <% } else{%>
                    <a href="/user/login" class="header__icons--user"><i class="fa-solid fa-circle-user"></i></a>
             <% } %>
                        <div class="contenedor_icono-cart">
                            <a href="/productos/cart" class="header__icons--cart"><i
                                    class="fa-solid fa-cart-shopping"></i></a>
                            <small class="mostrarCantidad"></small>
                        </div>
                        <div class="header__burguer-menu" id="contenedor-burguer_menu">
                            <input type="checkbox" id="burguer-menu" class="input__burguer-menu">
                            <label for="burguer-menu"><i class="fas fa-bars"></i></label>

                            <ul class="burguer-menu__options">
                                <li><a href="/productos" class="header-enlaces">Productos</a></li>
                                <details class="header-details">
                                    <summary class="header-summary">Categorías</summary>
                                    <div class="details_categorias">
                                        <% categorias.forEach(element=> { %>
                                            <a href="/productos/filter?categorias=<%= element.id%>" class="header-categoria">
                                                <li> <%= element.nombre %></li>
                                            </a>
                                        <% }); %>
                                    </div>
                                </details>
                                <li><a href="/productos/filter?ofertas=si" class="header-enlaces">Ofertas</a></li>
                            </ul>
                        </div>
                    </div>
        </div>

     </div>
</header>